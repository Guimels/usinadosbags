{
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [ {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        } ]
      }, {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css|jpg|jpeg|gif|png)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=86400"
        } ]
      },
      { 
        "source": "/service-worker.js",
        "headers": [ {
          "key": "Cache-Control",
          "value": "no-cache"
        } ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
