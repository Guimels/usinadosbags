{
  "hosting": {
    "public": "build",
    "headers": [
      { 
        "source": "/service-worker.js",
        "headers": [ { "key": "Cache-Control", "value": "max-age=3600" } ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
